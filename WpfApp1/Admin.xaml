<Window x:Class="WpfApp1.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Admin" Height="600" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="395*"/>
                <RowDefinition Height="21*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="383*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#FFF1DDF6" BorderThickness="1" Grid.Column="1" Margin="0,18,0,0" Grid.RowSpan="2"/>
            <Image x:Name="Img" VerticalAlignment="Top" Margin="9,10,557,0" Height="159" Grid.Column="1" Grid.Row="1" />
            <Label Content="Имя:" HorizontalAlignment="Left" Margin="217,10,0,0" VerticalAlignment="Top" Height="29" Width="62" Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="15"/>
            <Label x:Name="NameName" Content="Label" Foreground="White" HorizontalAlignment="Left" Margin="217,39,0,0" VerticalAlignment="Top" Height="29" Width="196" Grid.Column="1" Grid.Row="1" FontFamily="Arial Black" FontSize="16"/>
            <Label x:Name="familiName" Content="Label" Foreground="White" HorizontalAlignment="Left" Margin="217,97,0,0" VerticalAlignment="Top" Height="29" Width="196" Grid.Column="1" Grid.Row="1" FontFamily="Arial Black" FontSize="16"/>
            <Label x:Name="RolPolzov" Content="Label" Foreground="White" HorizontalAlignment="Left" Margin="217,155,0,0" VerticalAlignment="Top" Height="29" Width="196" Grid.Column="1" Grid.Row="1" FontFamily="Arial Black" FontSize="16"/>
            <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="217,68,0,0" VerticalAlignment="Top" Height="29" Width="84" Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="15"/>
            <Label Content="Должность:" HorizontalAlignment="Left" Margin="217,126,0,0" VerticalAlignment="Top" Height="29" Width="98" Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="15"/>
            <Button x:Name="Vhod" Content="Выход" Foreground="White" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="32" Width="141" Background="#FFEAB9F6" FontSize="18" FontFamily="Arial Black" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Click="Vhod_Click"/>
            <DatePicker x:Name="DatePik" Margin="0,0,31,409" Grid.Column="1" Grid.Row="1" KeyUp="DatePik_KeyUp" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="118"/>
            <DataGrid x:Name="Result" AutoGenerateColumns="False" Grid.Column="1" Margin="28,206,28,58" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding IDHistor}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Код пользователя" Binding="{Binding IDPolzovatel}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Логин пользователя" Binding="{Binding Polzovatel_.login}"></DataGridTextColumn>
                    <DataGridTextColumn Header="IP" Binding="{Binding ip}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата захода" Binding="{Binding DataNach}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата выхода" Binding="{Binding lastenter}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Причина выхода" Binding="{Binding IDPrichina_.Prichina}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <ComboBox x:Name="Sortirovka" Grid.Column="1" HorizontalAlignment="Left" Margin="572,168,0,0" Grid.Row="1" VerticalAlignment="Top" Width="163" DisplayMemberPath="login" SelectionChanged="Sortirovka_SelectionChanged"/>
            <Label Content="Сортировать по логину:" HorizontalAlignment="Left" Margin="560,134,0,0" VerticalAlignment="Top" Height="29" Width="186" Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="15"/>
            <Label Content="Сортировать по дате входа:" HorizontalAlignment="Left" Margin="539,0,0,439" VerticalAlignment="Bottom" Height="29" Width="207" Grid.Column="1" Grid.Row="1" FontFamily="Arial" FontSize="15"/>
            <Button x:Name="RegisNewSotrud" Content="Добавить сотрудника" Foreground="White" HorizontalAlignment="Right" Margin="0,0,199,10" VerticalAlignment="Bottom" Height="32" Width="252" Background="#FFEAB9F6" FontSize="18" FontFamily="Arial Black" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Click="RegisNewSotrud_Click"/>
        </Grid>
    </Grid>
</Window>
