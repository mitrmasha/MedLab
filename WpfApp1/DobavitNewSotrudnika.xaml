<Window x:Class="WpfApp1.DobavitNewSotrudnika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DobavitNewSotrudnika" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="146*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="759*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Border  Background="#FFF1DDF6" BorderThickness="1" Margin="11,16,14,0" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <Label Content="Фамилия" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="109" Grid.Column="1" Margin="10,10,0,0" Grid.Row="1"/>
        <TextBox x:Name="familia" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="188" Grid.Column="1" Margin="10,35,0,0" Grid.Row="1"/>
        <TextBox x:Name="name" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="188" Margin="13,90,0,0" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Имя" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="109" Grid.Column="1" Margin="13,63,0,0" Grid.Row="1"/>
        <Label Content="Логин" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="109" Grid.Column="1" Margin="19,121,0,0" Grid.Row="1"/>
        <TextBox x:Name="login" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" HorizontalAlignment="Left" Width="187" Grid.Column="1" Margin="13,147,0,0" Grid.Row="1"/>
        <Label Content="Пароль" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="109" Grid.Column="1" Margin="16,173,0,0" Grid.Row="1"/>
        <TextBox x:Name="porol" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" HorizontalAlignment="Left" Width="187" Grid.Column="1" Margin="13,199,0,0" Grid.Row="1"/>
        <Button Content="Очистить" Foreground="White" Background="#FFEAB9F6" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="32" Width="141" FontFamily="Arial Black" FontSize="18" BorderBrush="Black" Grid.Column="1" Margin="281,0,0,20" Grid.Row="1" Click="Button_Click"/>
        <Label Content="Номер телефона" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="152" Grid.Column="1" Margin="0,10,72,0" Grid.Row="1"/>
        <TextBox x:Name="NumberTelefon" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Right" Width="179" Grid.Column="1" Margin="0,36,45,0" Grid.Row="1"/>
        <Label Content="E-mail" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="152" Grid.Column="1" Margin="0,64,72,0" Grid.Row="1"/>
        <TextBox x:Name="Email" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" HorizontalAlignment="Right" Width="179" Grid.Column="1" Margin="0,90,45,0" Grid.Row="1"/>
        <Label Content="Выбор должности" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="202" Grid.Column="1" Margin="0,121,22,0" Grid.Row="1"/>
        <ComboBox x:Name="Dolgnost" HorizontalAlignment="Right" VerticalAlignment="Top" Width="179" DisplayMemberPath="Rol" Grid.Column="1" Margin="0,147,45,0" Grid.Row="1"/>
        <Button Content="Сохранить" Foreground="White" Background="#FFEAB9F6" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="32" Width="142" FontFamily="Arial Black" FontSize="18" BorderBrush="Black" Grid.Column="1" Margin="36,0,0,20" Grid.Row="1" Click="Button_Click_1"/>
        <Image x:Name="Img" Grid.Column="1" Margin="220,188,194,61" Grid.Row="1" Visibility="Hidden"/>
    </Grid>
</Window>
