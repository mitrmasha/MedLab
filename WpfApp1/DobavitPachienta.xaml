<Window x:Class="WpfApp1.DobavitPachienta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DobavitPachienta" Height="450" Width="600">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="196*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="747*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#FFF1DDF6" BorderThickness="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,26,20,0" Grid.RowSpan="2"/>
        <TextBox x:Name="familia" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Right" Width="188" Grid.Column="1" Margin="0,31,354,0" Grid.Row="1"/>
        <TextBox x:Name="name"  TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Right" Width="188" Grid.Column="1" Margin="0,85,354,0" Grid.Row="1"/>
        <Label Content="Фамилия" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="109" Grid.Column="1" Margin="0,5,433,0" Grid.Row="1" Height="26"/>
        <Label Content="Имя" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="109" Grid.Column="1" Margin="0,59,433,0" Grid.Row="1" Height="26"/>
        <Label Content="Дата рождения" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="142" Grid.Column="1" Margin="18,113,0,0" Grid.Row="1" Height="26"/>
        <DatePicker x:Name="dateHpBr" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="186" Grid.Column="1" Margin="18,139,0,0" Grid.Row="1" Height="24"/>
        <Label Content="Серия паспорта" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="152" Grid.Column="1" Margin="18,168,0,0" Grid.Row="1" Height="26"/>
        <Label Content="Номер паспорта" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="152" Grid.Column="1" Margin="18,222,0,0" Grid.Row="1" Height="26"/>
        <TextBox x:Name="SeriaPas" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="188" Grid.Column="1" Margin="18,194,0,0" Grid.Row="1"/>
        <TextBox x:Name="NumberPas" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="186" Grid.Column="1" Margin="18,248,0,0" Grid.Row="1"/>
        <Label Content="Номер телефона" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="152" Grid.Column="1" Margin="18,276,0,0" Grid.Row="1" Height="26"/>
        <TextBox x:Name="NumberTelefon" TextWrapping="Wrap"  VerticalAlignment="Top" Height="23" HorizontalAlignment="Left" Width="186" Grid.Column="1" Margin="18,302,0,0" Grid.Row="1"/>
        <Label Content="E-mail" Foreground="White" FontFamily="Arial Black"  VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="152" Grid.Column="1" Margin="280,5,0,0" Height="26" Grid.Row="1"/>
        <TextBox x:Name="Email" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" HorizontalAlignment="Right" Width="186" Grid.Column="1" Margin="0,32,94,0" Grid.Row="1"/>
        <Label Content="Страховой полис" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="149" Grid.Column="1" Margin="0,59,131,0" Grid.Row="1" Height="26"/>
        <TextBox x:Name="StrahPolis" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" HorizontalAlignment="Right" Width="186" Grid.Column="1" Margin="0,86,94,0" Grid.Row="1"/>
        <ComboBox x:Name="TipSrahPolis" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" DisplayMemberPath="typetrahPolic" Grid.Column="1" Margin="280,139,0,0" Grid.Row="1" Height="22"/>
        <Label Content="Тип страхового полиса" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="202" Grid.Column="1" Margin="0,113,78,0" Grid.Row="1" Height="26"/>
        <Label Content="Страховая компания" Foreground="White" FontFamily="Arial Black" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="202" Grid.Column="1" Margin="0,168,78,0" Grid.Row="1" Height="26"/>
        <ComboBox x:Name="StrahKompania" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" DisplayMemberPath="name" Grid.Column="1" Margin="280,195,0,0" Grid.Row="1" Height="22"/>
        <Button Content="Сохранить пациента" Foreground="White" Background="#FFEAB9F6" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="210" FontFamily="Arial Black" FontSize="14" BorderBrush="Black" Grid.Column="1" Margin="268,255,0,0" Grid.Row="1" Click="Button_Click_1"/>
        <Button Content="Выход" Foreground="White" Background="#FFEAB9F6" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="210" FontFamily="Arial Black" FontSize="14" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Margin="268,327,0,0" Click="Button_Click"/>
    </Grid>
</Window>
