<Window x:Class="WpfApp1.SozdanZakaz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SozdanZakaz" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#FFF1DDF6" BorderThickness="1" Margin="0,13,0,0" Grid.Column="1" Grid.RowSpan="8" Grid.ColumnSpan="3"/>
        <Button Content="Добавить пациента" Foreground="White" Background="#FFEAB9F6" FontSize="12" FontFamily="Arial Black" BorderBrush="Black" Margin="10,3,10,10" Grid.Column="2" Grid.Row="7" Click="Button_Click_1"/>
        <Button Content="Сохранить" Foreground="White" Background="#FFEAB9F6" FontSize="12" FontFamily="Arial Black" BorderBrush="Black" Margin="9,6,10,6" Grid.Column="2" Grid.Row="6" Click="Button_Click"/>
        <TextBox x:Name="NumberZakaz" TextWrapping="Wrap" Text="TextBox" Margin="6,3,43,3" Grid.Column="2" Grid.Row="2"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="6,10,0,0" VerticalAlignment="Top" Height="29" Width="84" Grid.Column="2" Grid.Row="3" FontFamily="Arial" FontSize="15"/>
        <DatePicker x:Name="Date" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="26" Width="155"/>
        <Label Content="Номер заказа:" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Center" Height="29" Width="132" Grid.Column="2" FontFamily="Arial" FontSize="15" Grid.Row="1"/>
        <ComboBox x:Name="NameFIO" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Bottom" Width="163" DisplayMemberPath="familia" Margin="0,0,0,7"/>
    </Grid>
</Window>
